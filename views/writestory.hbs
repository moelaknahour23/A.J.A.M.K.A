<script>
function myFunction() {
    document.getElementById("myForm").reset();
      document.getElementById("editor").innerHTML = "";
}
    
    function sendToServer(){
        
        
         if( document.getElementById('story-title-input' ).value == ""){
             
              openModal("Cannot post story", "Story needs to have a title.");
              return false;
             
         }
        
        else{
        
        var dataToSend = document.getElementById('editor').innerHTML + '';
        var textOnly = document.getElementById('editor').textContent;
        
        //Put it into a json object since we want all communication with server to be in JSON!
        var json = {
            title: document.getElementById('story-title-input').value,
            content : dataToSend,
            textContent: textOnly
        };

        if(json.textContent.length <= 100){
          openModal("Cannot post story", "Story needs to be 100 characters or more to be posted.");
        } else {
            $.post('/writestory/', json, function(data){
                    console.log('Succesfully sent data to server');
                    window.location.href = "/viewstory";
            })
          }
        }
        
    }
</script>

