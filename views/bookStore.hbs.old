<!DOCTYPE html>
<html>
<head>
    <!-- Link to minified CSS -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <!-- Link to my css file -->
    <link rel="stylesheet" href="/stylesheets/bookstoreSS.css">
    
    <link rel="stylesheet" href="/stylesheets/common.css">
    
</head>
<body>
    <div class="container">
        <div class="row">
            <!-- The title of the page -->
            <div class="col-md-6">
                <h1 class="title">Welcome to the Bookstore</h1>
            </div>
            <!-- The search bar -->
            <div class="input">
                <div class="col-md-6">
                    <div class="col-lg-6">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search for...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">Go!</button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Featured books class for title and caruosel -->
            <div class="featured">
                <h3>Featured Books</h3>
                <!-- Start of Carousel -->
                <div class="col-sm-12">
                    <div id="book-slide" class="carousel slide" data-ride="carousel">
                
                        <!-- indicators dot nov -->
                        <ol class="carousel-indicators">
                            <li data-target="#book-slide" data-slide-to="0" class="active"></li>
                            <li data-target="#book-slide" data-slide-to="1"></li>
                            <li data-target="#book-slide" data-slide-to="2"></li>
                        </ol>
                    
                        <!-- wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                <img class="fill-parent" src="/images/fimage1.jpg" alt="books1">
                                <div class="carousel-caption">
                                    <h1>Book 1</h1>
                                </div>
                            </div>
                            <div class="item">
                                <img class="fill-parent" src="/images/fimage2.jpg" alt="book2">
                                <div class="carousel-caption">
                                    <h1>Book 2</h1>
                                </div>
                            </div>
                            <div class="item">
                                <img class="fill-parent" src="/images/fimage3.jpg" alt="book3">
                                <div class="carousel-caption">
                                    <h1>Book 3</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Carousel Controls -->
                    <a class="left carousel-control" href="#book-slide" role="button" data-slide="prev">
                        <span class="glphyicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#book-slide" role="button" data-slide="next">
                        <span class="glphyicon glyphicon-chevron-right"></span>
                    </a>
                </div>
            </div>
        </div>
        <!-- The thumbnails classes -->
        <div class="row">
            <div class="allBooks">
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="/images/book-image1.gif" width="175px" height="175px" alt="Book1">
                        <div class="caption">
                            <h3>Book 1</h3>
                            <p>Book Info.</p>
                            <p><a href="https://www.cia.gov/library/center-for-the-study-of-intelligence/csi-publications/books-and-monographs/psychology-of-intelligence-analysis/PsychofIntelNew.pdf" class="btn btn-primary" role="button">Read</a> 
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="/images/book-image2.jpg" width="310px" height="310px" alt="Book2">
                        <div class=caption>
                            <h3>Book 2</h3>
                            <p>Book Info.</p>
                            <p><a href="http://sla.sjtu.edu.cn/voa/print/Psychology%20of%20Human%20Behavior,%20I-III%20--%20144.PDF" class="btn btn-primary" role="button">Read</a> </p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="/images/book-image3.jpg" width="200px" height="200px" alt="Book3">
                        <div class="caption">
                            <h3>Book 3</h3>
                            <p>Book Info.</p>
                            <p><a href="https://learn.saylor.org/pluginfile.php/40708/mod_resource/content/1/OpenStax-Psychology.pdf" class="btn btn-primary" role="button">Read</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Link to JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <!-- Link to Javascript files -->
    <script src="/javascripts/bootstrap.min.js"></script>
</body>
</html>